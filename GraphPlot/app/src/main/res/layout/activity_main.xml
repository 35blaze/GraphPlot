<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@android:color/darker_gray">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/btn_connect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="showDeviceList"
                android:id="@+id/connect"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:hapticFeedbackEnabled="true" />

            <TextView
                android:text="@string/connected_false"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold"
                android:background="#ff0000"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:background="@drawable/shape"
            android:id="@+id/viewDataCH1"
            android:text="@string/ch1"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:gravity="bottom"
            android:textColor="@android:color/black"
            android:longClickable="true"
            android:lines="6"
            android:clickable="false" />

        <TextView
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:id="@+id/viewDataCH2"
            android:text="@string/ch2"
            android:gravity="bottom"
            android:longClickable="true"
            android:lines="6"
            android:clickable="false" />

        <TextView
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:textSize="14sp"
            android:id="@+id/viewDataCH3"
            android:text="@string/ch3"
            android:gravity="bottom"
            android:longClickable="true"
            android:lines="6"
            android:clickable="false" />

        <TextView
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:textSize="14sp"
            android:id="@+id/viewDataCH4"
            android:text="@string/ch4"
            android:gravity="bottom"
            android:longClickable="true"
            android:lines="6"
            android:clickable="false" />

        <TextView
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:textSize="14sp"
            android:id="@+id/viewDataCH5"
            android:text="@string/ch5"
            android:gravity="bottom"
            android:longClickable="true"
            android:lines="6"
            android:clickable="false" />

        <TextView
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:textSize="14sp"
            android:id="@+id/viewDataCH6"
            android:text="@string/ch6"
            android:gravity="bottom"
            android:longClickable="true"
            android:lines="6"
            android:clickable="false" />
    </LinearLayout>
</LinearLayout>
